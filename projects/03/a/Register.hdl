/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    // Put your code here:

    Mux16 (a=muxin, b=in, sel=load, out=muxout);
    DFF (in=muxout[0], out=out[0]);
    DFF (in=muxout[0], out=muxin[0]);
}
